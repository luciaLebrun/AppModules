{% extends 'base.html.twig' %}

{% block title %}AppModules{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="col-12">
        <h4 class="text-secondary mt-5" >{{ module.PPN }} - {{ module.intitule }}</h4>
        {% for responsable in moduleResponsables %}
            <p class="text-body m-0">{{ responsable.trigramme }} - {{ responsable.nom }} {{ responsable.prenom }}</p>
        {% endfor %}

        <!--Tab Module-->
        <ul class="nav nav-tabs justify-content-around mt-5">
            <li class="nav-item">
                <a class="nav-link active" data-toggle="tab" href="#Organisation"><h4 class="text-secondary m-0">Organisation</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#Information"><h4 class="text-secondary m-0">Information</h4></a>
            </li>
        </ul>

        <!--Contenu Tabs-->
        <div id="myTabContent" class="tab-content">
            <!--Contenu Organisation-->
            <div class="tab-pane fade active show" id="Organisation">
                {% if moduleWeeks is defined and moduleWeeks is not empty %}
                    <div class="row justify-content-center mx-0">
                        <table class="table table-striped text-center border-left border-right border-bottom">
                            <thead>
                                <tr>
                                    <th scope="col" rowspan="2" class="border-light"></th>
                                    <th scope="col" class="border-left border-light">CM</th>
                                    <th scope="col" class="border-light">TD</th>
                                    <th scope="col" class="border-right border-light">TP</th>
                                </tr>
                                <tr>
                                    <th scope="col" class="border-left border-light">h</th>
                                    <th scope="col" class="border-light">h</th>
                                    <th scope="col" class="border-right border-light">h</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% if module.PPN|slice(1,1) == 1 or module.PPN|slice(1,1) == 3 %}
                                {% for s in semesterFirstWeek..52 %}
                                    <tr>
                                        <th scope="row">S{{ s }}</th>
                                        {% set semaineExist = 0 %}
                                        {% for semaine in moduleWeeks %}
                                            {% if semaine.semaine == s %}
                                                {% if semaine.CM != 0 %}
                                                    <td scope="row" class="border-left border-light">{{ semaine.CM }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-left border-light"></td>
                                                {% endif %}
                                                {% if semaine.TD != 0 %}
                                                    <td scope="row" class="border-light">{{ semaine.TD }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-light"></td>
                                                {% endif %}
                                                {% if semaine.TP != 0 %}
                                                    <td scope="row" class="border-right border-light">{{ semaine.TP }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-right border-light"></td>
                                                {% endif %}
                                                {% set semaineExist = 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if semaineExist == 0 %}
                                            <td scope="row" class="border-left border-light"></td>
                                            <td scope="row" class="border-light"></td>
                                            <td scope="row" class="border-right border-light"></td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                                {% for s in 1..semesterLastWeek %}
                                    <tr>
                                        <th scope="row">S{{ s }}</th>
                                        {% set semaineExist = 0 %}
                                        {% for semaine in moduleWeeks %}
                                            {% if semaine.semaine == s %}
                                                {% if semaine.CM != 0 %}
                                                    <td scope="row" class="border-left border-light">{{ semaine.CM }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-left border-light"></td>
                                                {% endif %}
                                                {% if semaine.TD != 0 %}
                                                    <td scope="row" class="border-light">{{ semaine.TD }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-light"></td>
                                                {% endif %}
                                                {% if semaine.TP != 0 %}
                                                    <td scope="row" class="border-right border-light">{{ semaine.TP }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-right border-light"></td>
                                                {% endif %}
                                                {% set semaineExist = 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if semaineExist == 0 %}
                                            <td scope="row" class="border-left border-light"></td>
                                            <td scope="row" class="border-light"></td>
                                            <td scope="row" class="border-right border-light"></td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            {% else %}
                                {% for s in semesterFirstWeek..semesterLastWeek %}
                                    <tr>
                                        <th scope="row">S{{ s }}</th>
                                        {% set semaineExist = 0 %}
                                        {% for semaine in moduleWeeks %}
                                            {% if semaine.semaine == s %}
                                                {% if semaine.CM != 0 %}
                                                    <td scope="row" class="border-left border-light">{{ semaine.CM }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-left border-light"></td>
                                                {% endif %}
                                                {% if semaine.TD != 0 %}
                                                    <td scope="row" class="border-light">{{ semaine.TD }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-light"></td>
                                                {% endif %}
                                                {% if semaine.TP != 0 %}
                                                    <td scope="row" class="border-right border-light">{{ semaine.TP }}</td>
                                                {% else %}
                                                    <td scope="row" class="border-right border-light"></td>
                                                {% endif %}
                                                {% set semaineExist = 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if semaineExist == 0 %}
                                            <td scope="row" class="border-left border-light"></td>
                                            <td scope="row" class="border-light"></td>
                                            <td scope="row" class="border-right border-light"></td>
                                        {% endif %}
                                    </tr>
                                {% endfor %}
                            {% endif %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-center my-3">Oops! La maquette n'est pas encore prête...</p>
                {% endif %}
            </div>
            <!--Contenu Information-->
            <div class="tab-pane fade" id="Information">
                <p class="text-center my-3">Oops! Les informations supplémentaires ne sont pas encore prêtes...</p>
            </div>
        </div>
    </div>

{% endblock %}