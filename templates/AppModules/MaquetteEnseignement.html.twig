{% extends 'base.html.twig' %}

{% block title %}AppModules{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="col-12">
        <!--Navigation Semestre-->
        <div class="row justify-content-center py-5">
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <div class="btn-group show" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"></button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="position: absolute;transform: translate3d(0px, 38px, 0px);top: 0px;left: 0px;will-change: transform;" x-placement="bottom-start">
                        <a class="dropdown-item" href="/semestre/1">Semestre 1</a>
                        <a class="dropdown-item" href="/semestre/2">Semestre 2</a>
                        <a class="dropdown-item" href="/semestre/3">Semestre 3</a>
                        <a class="dropdown-item" href="/semestre/4">Semestre 4</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="/semestre/5">License Pro</a>
                    </div>
                </div>
                {% if semesterNumber != 5 %}
                    <button type="button" class="btn btn-primary">Semestre {{ semesterNumber }}</button>
                {% else %}
                    <button type="button" class="btn btn-primary">Licence Pro</button>
                {% endif %}
            </div>
        </div>

        <!--Tab UE-->
        <ul class="nav nav-tabs justify-content-around">
            {% if semesterNumber != 5 %}
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#UE{{ semesterNumber }}1"><h4 class="text-secondary m-0">UE {{ semesterNumber }}1</h4></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-toggle="tab" href="#UE{{ semesterNumber }}2"><h4 class="text-secondary m-0">UE {{ semesterNumber }}2</h4></a>
            </li>
            {% else %}
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#UE{{ semesterNumber }}0"><h4 class="text-secondary m-0">UE {{ semesterNumber }}</h4></a>
                </li>
            {% endif %}
            <li class="nav-item">
                <a class="nav-link active" href="#Recap"><h4 class="text-body m-0">Recap</h4></a>
            </li>
        </ul>

        <!--Contenu Tabs-->
        <div id="myTabContent" class="tab-content">
            <!--Contenu UEs-->
            {% for UENumber in 1..2 %}
                {% if semesterNumber != 5 or UENumber != 1 %}
                    <div class="tab-pane fade" id="UE{{ semesterNumber }}{{ UENumber }}">
                        {% if semesterWeeks is defined and semesterWeeks is not empty and semesterWeeks['UE'~UENumber] is defined and semesterWeeks['UE'~UENumber] is not empty %}
                            <div class="row justify-content-center mx-0">
                                <table class="table table-striped text-center border-left border-right border-bottom">
                                    <thead>
                                    <tr>
                                        <th scope="col" rowspan="2" class="border-left border-right border-light"></th>
                                        {% set module = "" %}{% set nbCol = 0 %}
                                        {% for semaine in semesterWeeks['UE'~UENumber] %}
                                            {% if semaine.module|split(' ')[0] != module %}
                                                <th scope="col" colspan="3" class="border-left border-right border-light text-center">{{ semaine.module|split(' ')[0] }}<br/>{{ semaine.responsable }}</th>
                                                {% set nbCol = nbCol + 1 %}
                                            {% endif %}
                                            {% set module = semaine.module|split(' ')[0] %}
                                        {% endfor %}
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <tr>
                                        <th></th>
                                        {% set module = "" %}
                                        {% for semaine in semesterWeeks['UE'~UENumber] %}
                                            {% if semaine.module|split(' ')[0] != module %}
                                                <th scope="col" class="border-left">CM</th>
                                                <th scope="col">TD</th>
                                                <th scope="col" class="border-right">TP</th>
                                            {% endif %}
                                            {% set module = semaine.module|split(' ')[0] %}
                                        {% endfor %}
                                    </tr>
                                    {% if semesterNumber == 1 or semesterNumber == 3 %}
                                        {% for s in semesterFirstWeek..52 %}
                                            <tr>
                                                <th scope="row">S{{ s }}</th>
                                                {% set nb = 0 %}
                                                {% for semaine in semesterWeeks['UE'~UENumber] %}
                                                    {% if semaine.semaine == s %}
                                                        <td class="border-left">{{ semaine.CM }}</td>
                                                        <td>{{ semaine.TD }}</td>
                                                        <td class="border-right">{{ semaine.TP }}</td>
                                                        {% set nb = nb + 1 %}
                                                    {% endif %}
                                                {% endfor %}
                                                {% for i in nb..nbCol-1 %}
                                                    {% if nb != nbCol %}
                                                        <td class="border-left"></td>
                                                        <td></td>
                                                        <td class="border-right"></td>
                                                    {% endif %}
                                                {% endfor %}
                                            </tr>
                                        {% endfor %}
                                        {% for s in 1..semesterLastWeek %}
                                            <tr>
                                                <th scope="row">S{{ s }}</th>
                                                {% set nb = 0 %}
                                                {% for semaine in semesterWeeks['UE'~UENumber] %}
                                                    {% if semaine.semaine == s %}
                                                        <td class="border-left">{{ semaine.CM }}</td>
                                                        <td>{{ semaine.TD }}</td>
                                                        <td class="border-right">{{ semaine.TP }}</td>
                                                        {% set nb = nb + 1 %}
                                                    {% endif %}
                                                {% endfor %}
                                                {% for i in nb..nbCol-1 %}
                                                    {% if nb != nbCol %}
                                                        <td class="border-left"></td>
                                                        <td></td>
                                                        <td class="border-right"></td>
                                                    {% endif %}
                                                {% endfor %}
                                            </tr>
                                        {% endfor %}
                                    {% else %}
                                        {% for s in semesterFirstWeek..semesterLastWeek %}
                                            <tr>
                                                <th scope="row">S{{ s }}</th>
                                                {% set nb = 0 %}
                                                {% for semaine in semesterWeeks['UE'~UENumber] %}
                                                    {% if semaine.semaine == s %}
                                                        <td class="border-left">{{ semaine.CM }}</td>
                                                        <td>{{ semaine.TD }}</td>
                                                        <td class="border-right">{{ semaine.TP }}</td>
                                                        {% set nb = nb + 1 %}
                                                    {% endif %}
                                                {% endfor %}
                                                {% for i in nb..nbCol-1 %}
                                                    {% if nb != nbCol %}
                                                        <td class="border-left"></td>
                                                        <td></td>
                                                        <td class="border-right"></td>
                                                    {% endif %}
                                                {% endfor %}
                                            </tr>
                                        {% endfor %}
                                    {% endif %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <p class="text-center my-3">Oops! La maquette n'est pas encore prête...</p>
                        {% endif %}
                    </div>
                {% endif %}
            {% endfor %}
            <!--Contenu Recap-->
            <div class="tab-pane fade show active" id="Recap">
                <p class="text-center my-3">Oops! Les récapitulatifs ne sont pas encore prêtes...</p>
            </div>
        </div>
    </div>
{% endblock %}
